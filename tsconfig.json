// tsconfig.json
{
  "compilerOptions": {
    "target": "es2022",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "outDir": "dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@/*": ["client/src/*"],
      "@shared/*": ["shared/*"]
    },
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
  "resolveJsonModule": true
},
"include": [
"server/**/*.ts",
"client/src/**/*.ts",
"client/src/**/*.tsx",
"shared/**/*.ts",
"client/src/global.d.ts"
],
"exclude": ["node_modules", "dist"]
}
